extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method='post')
        input(name="title", id="title", type="text", placeholder="Title", maxlength=80, required)
        input(name="description", id="description", type="text", placeholder="Description", minlength=20, required)
        input(name="hashtags", id="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")