extends base.pug

block content 
    div#videoContainer(data-id=video._id)
        div#videoWrap
            div#videoCover
            video(src=`/${video.fileUrl}`)

        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand
    div
        p=video.description
        small=video.createdAt
    div 
        small Uploaded By 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
    if String(video.owner._id) === String(user._id)
        a(href=`${video._id}/edit`) Edit Video &rarr; 
        br
        a(href=`${video._id}/delete`) Delete Video &rarr;
    
    if loginState
        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Wrire a nice comment...")
                button Add Comment
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.owner)
                    i.fas.fa-comment
                    span  #{comment.text}
                    span ‚ùå

block scripts 
    script(src="/static/js/videoPlayer.js")
    if loginState
        script(src="/static/js/commentSection.js") 