extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="post") 
        input(placeholder="Name", name="name", type="text", required, value=user.name)
        input(placeholder="Email", name="email", type="email", required, value=user.email)
        input(placeholder="Username", name="username", type="text", required, value=user.username)
        input(placeholder="Location", name="location", type="text", required, value=user.location)
        input(type="submit", value="Update Profile")